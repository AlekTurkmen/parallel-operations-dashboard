{
  "version": 2,
  "name": "operations-ui",
  "outputDirectory": ".next",
  "installCommand": "cd app && npm install",
  "buildCommand": "cd app && npm run build",
  "regions": ["sfo1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 